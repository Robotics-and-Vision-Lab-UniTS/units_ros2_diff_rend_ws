{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "ROS: Attach",
            "type": "ros",
            "request": "attach"
        },
        {
            "name": "C++ ur_traj_publisher",
            "request": "launch",
            "type": "cppdbg",
            "miDebuggerServerAddress": "localhost:3000",
            "cwd": "/",
            "program": "${workspaceFolder}/install/ur_traj_publisher/lib/ur_traj_publisher/ur_traj_pub_node"
        },
        {
            "name": "Python nodes",
            "type": "ros",
            "request": "launch",
            "preLaunchTask": "colcon build debug pkg",
            "target": "${workspaceFolder}/install/${input:package}/share/${input:package}/launch/${input:package}.launch.py",
        },

    ],
    "inputs": [
        {
        "id": "package",
        "type": "promptString",
        "description": "Enter name of the package to launch",
        "default": "my_package"
        }],
}